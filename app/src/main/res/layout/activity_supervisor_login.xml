<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".SiteManagerLoginActivity"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/parking_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/smart_park1"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:scaleType="fitEnd"
            android:src="@drawable/bg1"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Johnn Bach"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:id="@+id/text_site_manager_name"
        android:drawableLeft="@drawable/user_site"
        android:gravity="center_vertical"
        android:drawablePadding="6dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Supervisor ID"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="#192342"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rectangle"
        android:drawableLeft="@drawable/user"
        android:textColor="#677191"
        android:textSize="16sp"
        android:fontFamily="@font/lato"
        android:id="@+id/edittext_login_id"
        android:inputType="text"
        android:hint="Login ID"
        android:gravity="center_vertical"
        android:textColorHint="#677191"
        android:drawablePadding="6dp"
        android:padding="6dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:paddingLeft="15dp"

        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="#192342"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/lato"

        android:textSize="16sp"
        android:background="@drawable/rectangle"

        android:drawableLeft="@drawable/password"
        android:textColor="#677191"
        android:hint="Password"
        android:id="@+id/edittext_password"
        android:gravity="center_vertical"
        android:inputType="numberPassword"
        android:textColorHint="#677191"
        android:drawablePadding="6dp"
        android:padding="6dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Login"
        android:gravity="center"
        android:textSize="18sp"
        android:id="@+id/text_login"
        android:fontFamily="@font/lato"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/login_button"/>


</LinearLayout>